<!-- project -->

<div class="banner-project">
  <%= cl_image_tag @project.image.key %>
</div>
<div class="project-info">
  <div class="titolo">
    <p class="categoria">TITOLO</p>
    <p class="contenuto"><%= @project.title %></p>
  </div>
  <div class="regia">
    <p class="categoria">REGIA</p>
    <p class="contenuto"><%= @project.direction %></p>
  </div>
  <div class="anno">
    <p class="categoria">ANNO</p>
    <p class="contenuto"><%= @project.year %></p>
  </div>
  <div class="coproduzione">
    <p class="categoria">CO-PRODUZIONE</p>
    <p class="contenuto"><%= @project.coproduction %> <br> <%= @project.coproduction2 %> <br> <%= @project.coproduction3 %> <br> <%= @project.coproduction4 %> <br> <%= @project.coproduction5 %></p>
  </div>
  <div class="distribuzione">
    <p class="categoria">DISTRIBUZIONE</p>
    <p class="contenuto"><%= @project.distribution %></p>
  </div>
</div>

<div class="project-story">
  <% if @project.story != "" %>
    <div class="categoria">
      <p> LA STORIA </p>
    </div>
    <p class="contenuto"><%= @project.story %></p>
  <% end %>
</div>

